/* 头部区域 */
.searchContainer {
  margin: 0 20rpx;
}
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.search {
  position: relative;
  display: flex;
  flex: 1;
  background: rgba(237, 237, 237, 0.3);
}
.search input {
  height: 60rpx;
  width: 90%;
  line-height: 60rpx;
  margin-left: 15rpx;
  font-size: 23rpx;
}
.clear {
  position: absolute;
  right: 30rpx;
  z-index: 10;
}
/* .placeholder {
  color: red;
} */
.cnacel {
  width: 100rpx;
  text-align: center;
}

/* 搜索内容展示区域 */
.searchContent {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #d43c33;
  font-size: 24rpx;
  color: #d43c33;
}

.searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}

.searchItem .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}

/* 搜索历史纪律区域 */
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
}

.history .title {
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.historyItem {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  margin: 5rpx 0 20rpx 20rpx;
  background: #ededed;
  padding: 0 15rpx;
  border-radius: 20rpx;
}

.history .delete {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 35rpx;
}

/* 热搜榜区域 */
.hotTitle {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .iconImg {
  width: 30rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.hotItem .order {
  margin: 0 10rpx;
}