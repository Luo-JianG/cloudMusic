/* 头部区域 */
.searchContainer {
  margin: 0 20rpx;
}
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.search {
  display: flex;
  flex: 1;
  background: rgba(237, 237, 237, 0.3);
}
.search input {
  height: 60rpx;
  width: 90%;
  line-height: 60rpx;
  margin-left: 15rpx;
  font-size: 23rpx;
}
/* .placeholder {
  color: red;
} */
.cnacel {
  width: 100rpx;
  text-align: center;
}

/* 热搜榜区域 */
.hotTitle {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .iconImg {
  width: 30rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.hotItem .order {
  margin: 0 10rpx;
}