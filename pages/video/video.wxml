<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header">
    <image src="/static/images/video/video.jpg" mode="" />
    <view class="search">
      搜索歌曲
    </view>
    <image src="/static/images/logo.png" mode="" />
  </view>
  <!-- 导航区域 -->
  <scroll-view class="navScroll" scroll-x enable-flex>
    <view class="navItem" wx:for="{{videoGroupList}}" wx:key="id">
      <view class="navContent {{navId === item.id ? 'active' : ''}}" id="{{item.id}}" data-id="{{item.id}}" bindtap="changeNav">
        {{item.name}}
      </view>
    </view>
  </scroll-view>
  <!-- 视频区域 -->
  <scroll-view class="videoScroll" scroll-y>
    <view class="videoItem" wx:for="{{videoList}}" wx:key="id">
      <video src="{{item.data.urlInfo}}" />

      <view class="content">{{item.data.title}}</view>

      <view class="footer">
        <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.data.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-aixin"></text>
            <text class="count">{{item.data.praisedCount}}</text>
          </text>
          <text class="item">
            <text class="iconfont icon-pinglun"></text>
            <text class="count">{{item.data.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-gengduo-shuxiang"></text>
          </button>
        </view>
      </view>
    </view>
  </scroll-view>
</view>